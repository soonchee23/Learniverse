<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/BasicInformation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:ellipsize="none"
            android:text="@string/drop_img"
            android:textSize="28sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/iv_add_image"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:background="@color/background_add_image"
                android:contentDescription="@string/upload_image"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/note_title_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/note_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_note_title_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_title"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_note_title_save2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_note_author_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/note_author"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_note_author_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_author"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_note_author_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/Description"
            android:layout_width="369dp"
            android:layout_height="34dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:text="@string/desc"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrice" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextDescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:hint="@string/desc"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/edit_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDescription2"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/note_link_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/note_link"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_note_link_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_link"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_note_link_save2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_note_phone_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/note_phone"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_note_phone_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_phone"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_note_phone_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/button_color"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>







