<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/TutorInformation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:ellipsize="none"
            android:text="@string/drop_img"
            android:textSize="28sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/tutor_add_image"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/upload_image"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tutor_name_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/tutor_name"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutor_tutor_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tutor_name"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutor_name_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tutor_email_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/tutor_email"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutor_email_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tutor_email"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutor_email_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tutor_highest_education_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/tutor_highest_education"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutor_highest_education_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tutor_highest_education"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutor_highest_education_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tutor_rating_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/tutor_rating"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutor_rating_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tutor_rating"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutor_rating_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tutor_strength_save"
            android:layout_width="407dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:text="@string/tutor_strength"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextShopPhoneNumber" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutor_strength_save1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tutor_strength"
            app:errorEnabled="true"
            app:hintTextAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutor_strength_save2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/buttonSaveTutor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="35dp"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>







